<table id="taable2" class="table table-striped table-bordered display">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fromemail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.toemail)
            </th>
            <th>
