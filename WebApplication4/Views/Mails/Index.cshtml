                    @Html.DisplayFor(modelItem => item.fromemail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.toemail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subjectemail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.messageemail)
                </td>
                <td style="display:none">
                    @Html.DisplayFor(modelItem => item.curuser)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </tbody>
</table>




